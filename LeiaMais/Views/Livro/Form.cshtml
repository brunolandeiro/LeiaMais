@model LeiaMais.Entidades.Livro
<script src="~/Scripts/jquery.MultiFile.js"></script>
<script src="~/Scripts/jquery.fileupload-image.js"></script>
<script src="../../Scripts/jquery-1.3.2.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#file').MultiFile({
            accept: 'gif|jpg',
            max: 3,
            STRING: {
                remove: 'Remover',
                denied: 'Tipo do arquivo inválido $ext!',
                duplicate: 'Esse arquivo já foi selecionado:\n$file!'
            }
        });
    });
</script>
<h2 style="text-align: center">Cadastre os Livros que deseja vender</h2>
<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
        @using (Html.BeginForm("Adiciona", "Livro", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {

            <label for="UsuarioId"></label>
            <input id="categoria" name="UsuarioId" class="form-control" value="@ViewBag.Id" type="hidden" />

            @Html.LabelFor(l => l.Nome, "Nome")
            @Html.TextBoxFor(l => l.Nome, new { @class = "form-control" })
            @Html.ValidationMessageFor(l => l.Nome)

            @Html.LabelFor(l => l.Autor, "Autor")
            @Html.TextBoxFor(l => l.Autor, new { @class = "form-control" })
            @Html.ValidationMessageFor(l => l.Autor)

            @Html.LabelFor(l => l.Valor, "Valor")
            @Html.TextBoxFor(l => l.Valor, new { @class = "form-control" })
            @Html.ValidationMessageFor(l => l.Valor)


            @Html.LabelFor(l => l.Descricao, "Descrição")
            @Html.TextAreaFor(l => l.Descricao, new { @class = "form-control" })
            @Html.ValidationMessageFor(l => l.Descricao)

            @Html.LabelFor(l => l.CategoriaId, "Categoria")
            @Html.DropDownListFor(l => l.CategoriaId,
            new SelectList(ViewBag.Categorias, "Id", "Nome"),
            new { @class = "form-control" })
            @Html.ValidationMessageFor(l => l.CategoriaId)

            @Html.Label("Foto")
            <input id="file" name="file" type="file"  />

            <input type="submit" class="btn btn-primary" value="Cadastrar" />

        }
    </div>
    <div class="col-sm-2"></div>
</div>