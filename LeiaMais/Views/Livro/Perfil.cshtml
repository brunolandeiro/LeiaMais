

<h1>@ViewBag.Perfil.Nome</h1> 
<h2>@ViewBag.Perfil.Email</h2>
@if (ViewBag.VerificaContato)
{
    <h5>Já é um contato</h5>
    
}
else{
    @Html.ActionLink("Adicionar aos contatos", "Adiciona", "Contato", new { contatoId = ViewBag.Perfil.Id }, null)
}

<div class="row">
    <div class="col-sm-8">
        <h4 style="text-align: center;">Livros de @ViewBag.Perfil.Nome</h4>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Autor</th>
                    <th>Categoria</th>
                    <th>Descrição</th>
                    <th>Valor</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var l in ViewBag.livro)
                {
                    <tr>

                        <td>@l.Nome</td>
                        <td>@l.Autor</td>
                        <td>@l.Categoria.Nome</td>
                        <td>
                            <div class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown">
                                    Descrição
                                    <span class="caret"></span>
                                </a>
                                <div class="dropdown-menu">
                                    @l.Descricao
                                </div>
                            </div>
                        </td>
                        <td>@l.Valor</td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


